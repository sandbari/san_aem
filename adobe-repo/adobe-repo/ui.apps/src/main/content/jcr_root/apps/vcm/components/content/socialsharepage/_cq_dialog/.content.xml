<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="SocialShare Authoring Dialog"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <heading
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldDescription="To author heading text"
                        fieldLabel="Heading"
                        name="./heading"/>
                    <facebook
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                        fieldDescription="Enable Facebook icon to share the page to facebook"
                        fieldLabel="Enable Facebook Share"
                        name="./facebook"
                        text="Enable Facebook Share"
                        uncheckedValue="false"
                        value="true"/>
                    <linkedin
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                        fieldDescription="Enable Linkedincicon to share the page to Linkedin"
                        fieldLabel="Enable Linkedin Share"
                        name="./linkedin"
                        text="Enable Linkedin Share"
                        uncheckedValue="false"
                        value="true"/>
                    <twitter
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                        fieldDescription="Enable Twitter to share the page to Twitter"
                        fieldLabel="Enable Twitter Share"
                        name="./twitter"
                        text="Enable Twitter Share"
                        uncheckedValue="false"
                        value="true"/>
                    <email
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                        fieldDescription="Enable Email icon to share the page through email"
                        fieldLabel="Enable Email Share"
                        name="./email"
                        text="Enable Email Share"
                        uncheckedValue="false"
                        value="true"/>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
