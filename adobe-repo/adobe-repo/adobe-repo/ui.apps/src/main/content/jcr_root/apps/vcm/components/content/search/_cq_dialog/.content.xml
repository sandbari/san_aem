<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Search Component"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[acs-commons.widgets.showhidedialogfields]">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                	<searchConfigs
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Search Configs"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <layout
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                          <mode
	                                        granite:class="hide"
	                                        jcr:primaryType="nt:unstructured"
	                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
	                                        disabled="{Boolean}true"
	                                        name="./mode"
	                                        value="search">
		                                        <granite:data
		                                            jcr:primaryType="nt:unstructured"
		                                            acs-cq-dialog-dropdown-checkbox-showhide=""
		                                            acs-cq-dialog-dropdown-checkbox-showhide-target=".dropdown-checkbox-showhide-target"/>
		                                        <items jcr:primaryType="nt:unstructured">
		                                            <search
		                                                jcr:primaryType="nt:unstructured"
		                                                text="Search"
		                                                value="search"/>
		                                        </items>
		                                    </mode> 
                                          <searchOnly
                                           	 jcr:primaryType="nt:unstructured"
                                             sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                             fieldLabel="Display Search Bar"
                                             name="./displaySearchBar"
                                             text="Display Search Bar"
                                             uncheckedValue="{Boolean}false"
                                             value="{Boolean}true">	
                                          </searchOnly>
                                          <searchOverlay
                                            granite:class="dropdown-checkbox-showhide-target cq-dialog-dropdown-checkbox-showhide"
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                            fieldLabel="Display Search Overlay"
                                            name="./displaySearchOverlay"
                                            text="Display Search Overlay"
                                            uncheckedValue="{Boolean}false"
                                            value="{Boolean}true">
                                            	<granite:data
		                                            jcr:primaryType="nt:unstructured"
		                                            acs-cq-dialog-dropdown-checkbox-showhide=""
		                                            acs-cq-dialog-dropdown-checkbox-showhide-target=".dropdown-checkbox-showhide-target"
		                                            acs-dropdownshowhidetargetvalue="search"/>
		                                  </searchOverlay>
                                          <searchLabel
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldLabel="Search Label"
                                            fieldDescription="Please provide Search Label text"
                                            name="./searchLabel"/>
                                          <searchPlaceHolder
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldLabel="Search Placeholder"
                                            fieldDescription="Please provide Search placeholder text"
                                            name="./searchText"/>  
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </searchConfigs>
                   	<searchOverlayConfigs
                   		granite:class="dropdown-checkbox-showhide-target"
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Search Overlay Configs"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                       <granite:data
                            jcr:primaryType="nt:unstructured"
                            acs-checkboxshowhidetargetvalue="true"
                            acs-dropdownshowhidetargetvalue="search"/>
                        <layout
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                             <image
                                               jcr:primaryType="nt:unstructured"
                                               sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                               allowUpload="{Boolean}false"
                                               autoStart="{Boolean}false"
                                               class="cq-droptarget"
                                               fieldLabel="Logo Image"
                                               fileReferenceParameter="./vcmLogoImage"
                                               mimeTypes="[image/gif,image/jpeg,image/png,image/webp,image/tiff,image/svg+xml]"
                                               multiple="{Boolean}false"
                                               name="./logoImage"
                                               uploadUrl="${suffix.path}"
                                               useHTML5="{Boolean}true"/>
                                                <targeUrl
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                fieldLabel="Logo Target url"
                                                name="./indexUrl"
                                                rootPath="/content/vcm"/>  
                                             <searchOverlayPlaceHolder
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="HelpText Placeholder"
                                                fieldDescription="Please provide Overlay Search placeholder text"
                                                name="./helptext"/>
                                             <recentsearchlabel
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Recent Search Label"
                                                fieldDescription="Please provide text Recent search label"
                                                name="./recentsearchlabel"/>
                                              <clearsearchlabel
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Clear Search Label"
                                                fieldDescription="Please provide text Clear search label"
                                                name="./clearsearchlabel"/>
                                              <closebottontext
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Close Button Label"
                                                fieldDescription="Please provide text Close button label"
                                                name="./closebottontext"/> 
                                             <suggestionsLimit
                                            	jcr:primaryType="nt:unstructured"
                                            	sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            	fieldLabel="Suggestions Limit"
                                           		name="./suggestionsLimit"/>
	                                         <searchResultsPage
	                                            jcr:primaryType="nt:unstructured"
	                                            sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
	                                            fieldLabel="Search Results Page"
	                                            name="./searchResultsPage"
	                                            rootPath="/content/vcm"/> 
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </searchOverlayConfigs>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
