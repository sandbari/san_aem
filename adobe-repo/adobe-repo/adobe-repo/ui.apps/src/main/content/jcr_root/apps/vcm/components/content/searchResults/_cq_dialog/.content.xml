<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Search Results Component"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <tags
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Search Results Config"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <resultsForText
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Resultsfor text"
                                                fieldDescription="To author the label text for ‘Results For’ to show as prefix for the search text in the results page"
                                                name="./resultsForText"/>
                                            <tabList
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="cq/gui/components/coral/common/form/tagfield"
                                                fieldDescription="Please Configure Tab categories here"
                                                fieldLabel="Please Configure Tab categories"
                                                multiple="{Boolean}true"
                                                name="./tabTags"
                                                required="{Boolean}true"
                                                rootPath="/content/cq:tags/vcm"/>
                                            <ignoreSearchTag
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="cq/gui/components/coral/common/form/tagfield"
                                                fieldDescription="To author tag to ignore in search"
                                                fieldLabel="Ignore Search Tag"
                                                multiple="{Boolean}false"
                                                name="./searchIgnoreTag"
                                                rootPath="/content/cq:tags/vcm"/>
                                            <searchLimit
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Search Limit"
                                                name="./searchLimit"/>
                                            <clearsearchlabel
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                 fieldLabel="Clear Search Label"
                                                 required="{Boolean}true"
                                                fieldDescription="Please provide Clear search Label"
                                                 name="./clearSearchLabel"/>
                                            <SeeAllText
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                 fieldLabel="See all button label"
                                                fieldDescription="Please provide See all button label"
                                                name="./SeeAllText"/>
                                            <seeAllLinkDescription
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="To author the aria-label or link description of the link. "
                                                fieldLabel="See All Link Description"
                                                name="./seeAllLinkDescription"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </tags>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
