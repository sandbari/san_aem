<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Investment Team Authoring Dialog "
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <heading
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Heading"
                        name="./heading"/>
                    <rootpath
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                        fieldDescription="To author the root path of the investors"
                        fieldLabel="Root Path"
                        name="./rootPath"
                        required="true"
                        rootPath="/content/"/>
                    <linktext
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        description="To author link text for Learn More or View Team link. "
                        fieldLabel="link text"
                        name="./linkText"/>
                    <titlestyle
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                        fieldDescription="To choose the display style of the section"
                        fieldLabel="Team Display style"
                        name="./teamDisplayStyle">
                        <items jcr:primaryType="nt:unstructured">
                            <halfwidthwithleader
                                jcr:primaryType="nt:unstructured"
                                text="2 Column Half Width with Leader"
                                value="halfWidthWithLeader"/>
                            <halfwidth
                                jcr:primaryType="nt:unstructured"
                                text="2 column half width display"
                                value="halfWidth"/>
                            <shortinfo
                                jcr:primaryType="nt:unstructured"
                                text="3 column short info display"
                                value="shortInfo"/>
                        </items>
                    </titlestyle>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
