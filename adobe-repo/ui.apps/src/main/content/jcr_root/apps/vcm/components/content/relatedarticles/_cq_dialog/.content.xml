<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Related Articles"
    sling:resourceType="cq/gui/components/authoring/dialog"
    helpPath="https://www.adobe.com/go/aem_cmp_search_v1">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <properties
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Properties"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <heading
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="To author the text &quot;Subscribe&quot; as the section heading."
                                                fieldLabel="Heading"
                                                name="./heading"
                                                required="{Boolean}true"/>
                                            <articlePoints
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                composite="{Boolean}true"
                                                fieldDescription="Click '+' to add a new page"
                                                fieldLabel="Article Points">
                                                <field
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                                    name="./articlePoints">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <column
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/foundation/container">
                                                            <items jcr:primaryType="nt:unstructured">
                                                                <thumbnailimage
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                                                    fieldDescription="To upload DAM image for the thumbnail."
                                                                    fieldLabel="Thumb nail image"
                                                                    name="./thumbnailImage"
                                                                    rootPath="/content/dam/vcm"
                                                                    wrapperClass="cmp-image--editor-link"/>
                                                                <alttext
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                    fieldDescription="To author the alt text for the thumbnail image "
                                                                    fieldLabel="Alt Text"
                                                                    name="./altText"/>
                                                                <articletext
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                    fieldDescription="To author the article text"
                                                                    fieldLabel="Article text"
                                                                    name="./articleText"
                                                                    required="{Boolean}true"/>
                                                                <LinkUrl
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                                    fieldDescription="To author the page link to be linked to the respective article."
                                                                    fieldLabel="Link Url to the respective article"
                                                                    name="./linkUrl"
                                                                    required="{Boolean}true"
                                                                    rootPath="/content/vcm"
                                                                    wrapperClass="cmp-image--editor-link"/>
                                                                
                                                                <tabselect
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                                    fieldDescription="To author target for link to be open in same tab or new tab"
                                                                    fieldLabel="Target"
                                                                    name="./tabSelect">
                                                                    <items jcr:primaryType="nt:unstructured">
                                                                        <sametab
                                                                            jcr:primaryType="nt:unstructured"
                                                                            text="Same tab"
                                                                            value="_self"/>
                                                                        <newtab
                                                                            jcr:primaryType="nt:unstructured"
                                                                            text="New tab"
                                                                            value="_blank"/>
                                                                    </items>
                                                                </tabselect>
                                                            </items>
                                                        </column>
                                                    </items>
                                                </field>
                                            </articlePoints>
                                            <hiderightarrow
						                        jcr:primaryType="nt:unstructured"
						                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
						                        fieldDescription="Checkbox to show/hide the green right arrow in each link"
						                        fieldLabel="Hide Right Arrow"
						                        name="./hideRightArrow"
												text="Hide Right Arrow"
												value="true"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </properties>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
