<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Signin Authoring Dialog "
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <properties
                jcr:primaryType="nt:unstructured"
                jcr:title="Configure Properties"
                sling:resourceType="granite/ui/components/coral/foundation/container"
                margin="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <columns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <ussaMemberTitle
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="Please enter the title of the block"
                                        fieldLabel="USAA Member Title"
                                        name="./ussaMemberTitle"/>
                                    <signinbutton
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="please Provide buttontext"
                                        fieldLabel="Sign In Button"
                                        name="./signInButton"
                                        required="{Boolean}true"/>
                                    <signinurl
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="Please Provide valid Url"
                                        fieldLabel="Sign In Service Url"
                                        name="./signInUrl"
                                        required="{Boolean}true"/>
                                    <tabselect
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        fieldDescription="To author target for link to be open in same tab or new tab"
                                        fieldLabel="Target"
                                        name="./tabSelect">
                                        <items jcr:primaryType="nt:unstructured">
                                            <sametab
                                                jcr:primaryType="nt:unstructured"
                                                text="Same tab"
                                                value="_self"/>
                                            <newtab
                                                jcr:primaryType="nt:unstructured"
                                                text="New tab"
                                                value="_blank"/>
                                        </items>
                                    </tabselect>
                                    <newuserhelptext
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="Enter the text to indicate for new user"
                                        fieldLabel="New User Label"
                                        name="./newUserLabel"
                                        required="{Boolean}true"/>
                                    <singuptext
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                        fieldDescription="Enter the note and link for signup"
                                        fieldLabel="New User Signup"
                                        name="./signUpText"
                                        removeSingleParagraphContainer="{Boolean}true"
                                        useFixedInlineToolbar="{Boolean}true">
                                        <rtePlugins
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceSuperType="vcm/components/content/common/rtePlugins"/>
                                        <uiSettings
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceSuperType="vcm/components/content/common/uiSettings"/>
                                    </singuptext>
                                </items>
                            </column>
                        </items>
                    </columns>
                </items>
            </properties>
        </items>
    </content>
</jcr:root>
