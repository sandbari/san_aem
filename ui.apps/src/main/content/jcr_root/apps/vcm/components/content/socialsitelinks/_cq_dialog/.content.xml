<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Social Site Links Authoring Dialog"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <heading
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldDescription="To author heading text"
                        fieldLabel="Heading"
                        name="./heading"/>
                    <sociallinks
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                        composite="{Boolean}true"
                        eaem-max-items="5"
                        eaem-min-items="1"
                        fieldLabel="Social Link Icon"
                        required="true">
                        <field
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/container"
                            name="./socialLinks">
                            <items jcr:primaryType="nt:unstructured">
                                <column
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                    <items jcr:primaryType="nt:unstructured">
                                        <socialshareicons
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                            fieldDescription="Select the social share icon need to be displayed"
                                            fieldLabel="Social Icons"
                                            name="./socialIcons"
                                            required="true">
                                            <items jcr:primaryType="nt:unstructured">
                                                <facebook
                                                    jcr:primaryType="nt:unstructured"
                                                    text="Facebook"
                                                    value="facebook-square"/>
                                                <instagram
                                                    jcr:primaryType="nt:unstructured"
                                                    text="Instagram"
                                                    value="instagram"/>
                                                <linkedin
                                                    jcr:primaryType="nt:unstructured"
                                                    text="LinkedIn"
                                                    value="linkedin-square"/>
                                                <twitter
                                                    jcr:primaryType="nt:unstructured"
                                                    text="Twitter"
                                                    value="twitter"/>
                                                <youtube
                                                    jcr:primaryType="nt:unstructured"
                                                    text="Youtube"
                                                    value="youtube-play"/>
                                            </items>
                                        </socialshareicons>
                                        <linkurl
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                            fieldDescription="To author link of the social share site url"
                                            fieldLabel="Link URL"
                                            name="./linkUrl"
                                            required="true"/>
                                        <tabselect
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                            fieldDescription="To author target for link to be open in same tab or new tab"
                                            fieldLabel="Target"
                                            name="./tabSelect">
                                            <items jcr:primaryType="nt:unstructured">
                                                <sametab
                                                    jcr:primaryType="nt:unstructured"
                                                    text="Same tab"
                                                    value="_self"/>
                                                <newtab
                                                    jcr:primaryType="nt:unstructured"
                                                    text="New tab"
                                                    value="_blank"/>
                                            </items>
                                        </tabselect>
                                        <alttext
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldDescription="To author alt text for social links"
                                            fieldLabel="Alt text"
                                            name="./altText"
                                            required="true"/>
                                    </items>
                                </column>
                            </items>
                        </field>
                    </sociallinks>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
