<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="FAQ details dialog"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <parentpath
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                        fieldDescription="To author root path"
                        fieldLabel="Root path"
                        name="./parentPath"
                        required="true"
                        rootPath="/content/"/>
                    <seeallfaq
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldDescription="To author text for see all FAQ."
                        fieldLabel="See all Label"
                        name="./seeAllFaq"/>
                    <taglist
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                        allowBlank="false"
                        composite="{Boolean}true"
                        eaem-max-items="8"
                        eaem-min-items="1"
                        fieldLabel="Tag list"
                        required="{Boolean}true">
                        <field
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/container"
                            name="./tagDetailsList">
                            <items jcr:primaryType="nt:unstructured">
                                <column
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                    <items jcr:primaryType="nt:unstructured">
                                        <taggrpname
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldDescription="To author link text for the footer link page"
                                            fieldLabel="Tag group name"
                                            name="./tagGrpName"
                                            required="{Boolean}true"/>
                                        <tags
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="cq/gui/components/coral/common/form/tagfield"
                                            allowBulkEdit="{Boolean}true"
                                            autocreateTag="{Boolean}true"
                                            fieldDescription="To author link url for the footer link page"
                                            fieldLabel="Tags"
                                            multiple="{Boolean}true"
                                            name="./faqTag"
                                            required="{Boolean}true">
                                            <granite:data
                                                jcr:primaryType="nt:unstructured"
                                                cq-msm-lockable="faqTag"/>
                                        </tags>
                                    </items>
                                </column>
                            </items>
                        </field>
                    </taglist>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
